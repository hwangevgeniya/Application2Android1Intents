<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <EditText
            android:padding="@dimen/tendp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_button"
            android:id="@+id/email_et"
            android:text="@string/rsk_mva_gmail_com"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="@dimen/tendp"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/sixtydp"/>

        <EditText
            android:padding="@dimen/tendp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/email_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="20dp"
            android:background="@drawable/bg_button"
            android:id="@+id/theme_et"
            android:text="@string/theme"
            android:drawableStart="@drawable/ic_baseline_text_snippet_24"
            android:drawablePadding="@dimen/tendp"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/sixtydp"/>

        <EditText
            android:padding="@dimen/tendp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/theme_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="20dp"
            android:background="@drawable/bg_button_purple"
            android:id="@+id/message_et"
            android:text="@string/message"
            android:drawableStart="@drawable/ic_baseline_message_24"
            android:drawablePadding="@dimen/tendp"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/sixtydp"/>


        <Button
            android:text="@string/send"
            android:layout_marginTop="@dimen/sixtydp"
            app:layout_constraintTop_toBottomOf="@+id/message_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_send"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/sixtydp"/>

        <Button
            android:text="@string/next"
            android:layout_marginTop="@dimen/sixtydp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/sixtydp"
            android:id="@+id/btn_next"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/sixtydp"/>

</androidx.constraintlayout.widget.ConstraintLayout>